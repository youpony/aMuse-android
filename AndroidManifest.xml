<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youpony.amuse"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.youpony.amuse.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/loadingTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.youpony.amuse.PageViewer"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleTheme" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="com.youpony.amuse.Story"
            android:label="@string/title_activity_story" >
        </activity>
        <activity
            android:name="com.youpony.amuse.QrCode"
            android:label="@string/title_activity_qr_code" >
        </activity>
        <activity
            android:name="com.youpony.amuse.CameraTab"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name="com.youpony.amuse.CameraPreview"
            android:label="@string/title_activity_camera_preview" >
        </activity>
        <activity
            android:name="com.youpony.amuse.QrResult"
            android:label="@string/title_activity_qr_result"
            android:screenOrientation="portrait"
            android:theme="@style/resultTheme" >
        </activity>
        <activity
            android:name="com.youpony.amuse.ItemInfo"
            android:label="@string/title_activity_item_info"
            android:theme="@style/resultTheme" >
        </activity>
        <activity
            android:name="com.youpony.amuse.ExhibitionChange"
            android:label="@string/title_activity_exhibition_change"
            android:theme="@style/resultTheme" >
        </activity>
    </application>

</manifest>